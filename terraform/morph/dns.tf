# MX records

# We can now use a single MX record for Google workspace
resource "cloudflare_record" "mx" {
  zone_id  = cloudflare_zone.main.id
  name     = "morph.io"
  type     = "MX"
  priority = 1
  value    = "smtp.google.com"
}

