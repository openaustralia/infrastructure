resource "cloudflare_zone" "main" {
  account_id = var.cloudflare_account_id
  plan       = "business"
  zone       = "morph.io"
}

# A records
resource "cloudflare_record" "root" {
  zone_id = cloudflare_zone.main.id
  name    = "morph.io"
  type    = "A"
  value   = linode_instance.main.ip_address
}

# CNAME records
resource "cloudflare_record" "www" {
  zone_id = cloudflare_zone.main.id
  name    = "www.morph.io"
  type    = "CNAME"
  value   = "morph.io"
}

